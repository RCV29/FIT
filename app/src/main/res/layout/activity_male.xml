<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Malebody">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/s_male"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/sslim"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/l_male"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_male"
        app:srcCompat="@drawable/llean"
        app:shapeAppearanceOverlay="@style/roundimageview"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/b_male"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_male"
        app:srcCompat="@drawable/bbulk"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <TextView
        android:id="@+id/tv_slim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/slim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_male" />

    <TextView
        android:id="@+id/tv_lean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/lean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_male" />

    <TextView
        android:id="@+id/tv_bulk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/bulk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_male" />


</androidx.constraintlayout.widget.ConstraintLayout>